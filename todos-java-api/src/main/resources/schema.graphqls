# [C->Create; R->Read; U->Update]
type Todo {
    id: ID!
    text: String!
    completed: Boolean
}
# [R]
type Query {
    todos(count: Int): [Todo]
    todo(id: ID!): Todo
}

# [C, U]
type Mutation {
    createTodo(text: String!): Todo
    toggleTodoCompleted(id: ID!): Todo
    deleteTodo(id: ID!): Todo
}